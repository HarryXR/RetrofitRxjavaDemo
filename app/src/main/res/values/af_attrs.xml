<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlowLayout">
        <attr name="fl_gridRatio" format="float"/>
        <!--<attr name="fl_columns"/>-->
        <!--<attr name="fl_hSpacing"/>-->
        <!--<attr name="fl_vSpacing"/>-->

        <!-- horizontal divider -->
        <!--<attr name="fl_hDivider"/>-->
        <!--<attr name="fl_hDividerWidth"/>-->
        <attr name="fl_hDividerPadding" format="dimension"/>
        <!--<attr name="fl_hDividerShow"/>-->
        <!-- vertical divider -->
        <!--<attr name="fl_vDivider"/>-->
        <!--<attr name="fl_vDividerHeight"/>-->
        <!--<attr name="fl_vDividerPadding"/>-->
        <!--<attr name="fl_vDividerShow"/>-->
        <!--<attr name="fl_choiceMode"/>-->

        <attr name="android:gravity"/>
        <attr name="android:numColumns"/>
        <attr name="android:horizontalSpacing"/>
        <attr name="android:verticalSpacing"/>
        <attr name="android:divider"/>
        <attr name="android:dividerHeight"/>
        <attr name="android:dividerPadding"/>
        <attr name="android:showDividers"/>
        <attr name="android:choiceMode"/>
    </declare-styleable>

    <!-- AfSwipeRefreshLayout-->
    <declare-styleable name="SwipyRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="both" value="2"/>
        </attr>
    </declare-styleable>
    <!-- see https://github.com/TUBB/SwipeMenuRecyclerView -->
    <declare-styleable name="SwipeMenu">
        <attr name="anim_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RefreshRecyclerView">
        <attr name="dividerHeight" format="reference|dimension"/>
        <attr name="dividerColor" format="reference|color"/>
        <attr name="recyclerView" format="reference"/>
        <attr name="autoLoad" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="RoundButton">
        <attr name="android:radius"/>
        <attr name="borderWidth" format="dimension"/>
        <attr name="borderColor" format="reference|color"/>
        <!--<attr name="pressedBgColor" format="reference|color"/>-->
        <!--<attr name="checkedBgColor" format="reference|color"/>-->
        <!--<attr name="selectedBgColor" format="reference|color"/>-->
    </declare-styleable>

    <declare-styleable name="BounceViewPager">
        <attr name="overscroll_translation" format="dimension"/>
        <attr name="overscroll_animation_duration" format="integer"/>
    </declare-styleable>
</resources>
