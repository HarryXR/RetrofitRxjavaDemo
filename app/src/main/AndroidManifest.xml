<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.harry"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.REORDER_TASKS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.MONKEY" />
            </intent-filter>
        </activity>

        <activity android:name=".view.TestActivity"/>
        <activity android:name=".ndk.TestNDK"/>
        <activity android:name=".layout.LayoutActivity"/>
        <activity android:name=".rxjava.RxJavaActivity"/>
        <activity android:name=".service.ServiceActivity"/>
        <activity android:name=".design.DesignActivity"/>
        <activity android:name=".design.DesignInputActivity"/>
        <activity android:name=".design.TablayoutActivity"/>

        <activity android:name=".design.SlideActivity"
                  android:theme="@style/AppBaseTheme"/>
        <activity android:name=".design.CollapsingActivity"/>
        <activity android:name=".rxjava.retrofit.TopActivity"
            android:screenOrientation="portrait"/>
        <service
            android:name=".service.MyService"
            android:process=":remote"/>
    </application>

</manifest>